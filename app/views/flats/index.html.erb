<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1><%= "All our Flats (#{@flats.count})" %></h1>
    </div>
  </div>
  <div class="row cards">
      <% @flats.each do |flat| %>
        <div class="card col-md-4">
          <div class="card-content">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <i class="fa-solid fa-user-group"></i>
            <span><%= flat.number_of_guests %></span>
            <i class="fa-solid fa-euro-sign"></i>
            <span><%= flat.price_per_night %></span>
          </div>
            <div class="card-actions">
              <%= link_to 'More Info', flat_path(flat), class:'info-btn' %>
              <%= link_to 'Edit', edit_flat_path(flat), class:'info-btn' %>
              <%= link_to 'Remove', flat_path(flat), class:'info-btn', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
        </div>
      <% end %>
  </div>
</div>
